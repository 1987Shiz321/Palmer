<wiidisc version="1">
	<id game="RMC"/>
	<options>
		<section name="{$pack}">
			<option name="Pack">
				<choice name="Enabled">
					<patch id="PackLoadPack"/>
				</choice>
			</option>
			<option name="Custom Music">
				<choice name="From CTGP-r">
					<patch id="CTGPLoadMusic"/>
				</choice>
				<choice name="From Pack">
					<patch id="PackLoadMusic"/>
				</choice>
			</option>
		</section>
	</options>	
	<patch id="PackLoadPack">
		<memory offset="0x8000A3F4" value="4bff9c0c" original="4e800020" /> <!--RMCP-->
		<memory offset="0x8000A3B4" value="4BFF9C4c" original="4e800020" /> <!--RMCE-->
		<memory offset="0x8000A350" value="4BFF9CB0" original="4e800020" /> <!--RMCJ-->
		<memory offset="0x8000A4FC" value="4BFF9B04" original="4e800020" /> <!--RMCK-->
	   <memory valuefile="/{$pack}/Binaries/Loader.bin" offset="0x80004000"/>
		<folder external="/{$pack}/Binaries" disc="/Binaries" create="true"/>
		<folder external="/{$pack}/Tracks" disc="/Race/Course" create="true"/>
		<folder external="/{$pack}/Assets" disc="/" create="true"/>
	</patch>	

	<patch id="CTGPLoadMusic">
		<folder external="/ctgpr/My Stuff" disc="/sound" />
		<folder external="/ctgpr/My Stuff" disc="/sound/strm" />
	</patch>
	<patch id="PackLoadMusic">
		<folder external="/{$pack}/My Stuff" disc="/sound" />
		<folder external="/{$pack}/My Stuff" disc="/sound/strm" />
	</patch>
</wiidisc>